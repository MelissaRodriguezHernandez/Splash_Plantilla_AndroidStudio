<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#131313"
    android:padding="20dp"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/TextViewTopTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:fontFamily="@font/fascinate_inline"
        android:gravity="top|center"
        android:text="@string/app_logo_top"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:textColor="@color/logo_color"
        android:textSize="@dimen/logo_size"
        tools:ignore="SpUsage" />

    <TableLayout
        android:id="@+id/TableLayout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/TableRow01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical">

            <ImageView
                android:id="@+id/splash1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/uno"
                android:layout_gravity="center_horizontal|center_vertical"
                android:contentDescription="@string/todo" />

            <ImageView
                android:id="@+id/splash2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/dos"
                android:layout_gravity="center_horizontal|center_vertical"
                android:contentDescription="@string/todo"/>
        </TableRow>

        <TableRow
            android:id="@+id/TableRow02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/splash3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/dos"
                android:layout_gravity="center_horizontal|center_vertical"
                android:contentDescription="@string/todo"/>

            <ImageView
                android:id="@+id/splash4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/uno"
                android:layout_gravity="center_horizontal|center_vertical"
                android:contentDescription="@string/todo"/>
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/TextViewBottomTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/logo_size"
        android:fontFamily="@font/fascinate_inline"
        android:layout_margin="20dp"
        android:textColor="@color/logo_color"
        android:gravity="center"
        android:text="@string/app_logo_bottom"
        tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/TextViewBottomVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_version_info"
        android:textSize="@dimen/version_size"
        android:textColor="@color/logo_color"
        android:background="#552D79"
        android:textAlignment="center"
        android:lineSpacingExtra="@dimen/version_spacing"
        tools:ignore="SpUsage" />
</LinearLayout>
</layout>